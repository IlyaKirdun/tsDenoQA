{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictFunctionTypes": true
  },
  "include": [
    "tests//*.ts",
    "utils//*.ts",
    "page/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright.config.ts"
  ]
}